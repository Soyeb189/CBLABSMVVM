<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardAcReq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tableHeader"
            android:background="@android:color/white"
            android:layout_below="@+id/searchInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvReqBy"
                android:text="Requested By"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintRight_toLeftOf="@+id/tvRegion" />

            <TextView
                android:id="@+id/tvRegion"
                android:text="10/09/2020"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="@+id/tvReqBy"
                app:layout_constraintRight_toLeftOf="@+id/tvArea"
                app:layout_constraintLeft_toRightOf="@+id/tvReqBy"
                />

            <TextView
                android:id="@+id/tvArea"
                android:text="Area"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_width="100dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="@+id/tvReqBy"
                app:layout_constraintRight_toLeftOf="@+id/tvTerritory"
                app:layout_constraintLeft_toRightOf="@+id/tvRegion"
                />

            <TextView
                android:id="@+id/tvTerritory"
                android:text="Territory"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="@+id/tvReqBy"
                app:layout_constraintRight_toLeftOf="@+id/tvDst"
                app:layout_constraintLeft_toRightOf="@+id/tvArea" />

            <TextView
                android:id="@+id/tvDst"
                android:text="DST"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="@+id/tvReqBy"
                app:layout_constraintRight_toLeftOf="@+id/tvReqType"
                app:layout_constraintLeft_toRightOf="@+id/tvTerritory"
                />
            <TextView
                android:id="@+id/tvReqType"
                android:text="Request Type"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="@+id/tvReqBy"
                app:layout_constraintRight_toLeftOf="@+id/tvReqDateTime"
                app:layout_constraintLeft_toRightOf="@+id/tvDst"
                />
            <TextView
                android:id="@+id/tvReqDateTime"
                android:text="Request date and time"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_width="200dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="@+id/tvReqBy"
                app:layout_constraintRight_toLeftOf="@+id/tvAction"
                app:layout_constraintLeft_toRightOf="@+id/tvReqType"
                />
            <TextView
                android:id="@+id/tvAction"
                android:text="View Details"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="@+id/tvReqBy"
                app:layout_constraintLeft_toRightOf="@+id/tvReqDateTime"

                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <View
        android:layout_below="@+id/cardAcReq"
        android:background="#FDE8E8"
        android:layout_width="wrap_content"
        android:layout_height="1dp"/>

</RelativeLayout>